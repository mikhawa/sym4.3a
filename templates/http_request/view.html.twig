{% extends 'base.html.twig' %}

{% block title %}Les requêtes http / view id!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Les requêtes http / view id ✅</h1>

        <ul>
            <li>Lien avec 1 variable get numérique au hasard:<br> <a href="{{ path("voir_un_id",{'id':new_id}) }}">{{ path("voir_un_id",{'id':new_id}) }}</a></li>
                {% set hasardTwig = random(1,100) %}
            <li>Lien avec 1 variable get numérique au hasard et une variable get "test":<br> <a href="{{ path("voir_un_id",{'id':new_id}) }}?test={{ hasardTwig }}">{{ path("voir_un_id",{'id':new_id}) }}?test={{ hasardTwig }}</a></li>
        </ul>
        <p>variable get "id": {{ id }}</p>
        {% if test %}
            <p>Si la variable get "test" existe, voici sa valeur: {{ test }}</p>
        {% endif %}
        {{ dump(id) }}
    </div>
{% endblock %}
